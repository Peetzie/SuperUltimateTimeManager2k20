   <children>
      <!--right side pane (graphics)-->
      <AnchorPane layoutX="300.0" prefHeight="400.0" prefWidth="300.0" style="-fx-background-color: #0598ff;">
         <children>
            <Label layoutX="107.0" layoutY="166.0" text="Join Project" textFill="WHITE">
